from customtkinter import *

# Ініціалізація
set_appearance_mode("light")  # або "dark", або "system"

window = CTk()
window.title("Task2")
window.geometry("400x400")

# Синій фон
window.configure(fg_color="blue")

# Текстове поле
text_field = CTkTextbox(window, width=380, height=280)
text_field.pack(pady=19)

# Поле вводу
text_entry = CTkEntry(window, width=380)
text_entry.pack(pady=10)

# Основна кнопка
btn = CTkButton(window, text="КЛІК", width=380)
btn.pack()

# Додаткова кнопка в правому верхньому куті — така сама за стилем
corner_btn = CTkButton(window, text="КНОПКА", width=100, height=28)
corner_btn.place(relx=1.0, rely=0.0, anchor="ne", x=-10, y=19)  # Відступи від країв

# Запуск
window.mainloop()



